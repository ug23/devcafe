# Environment Variables for AWS Spot Development Environment
# Copy this file to .env and fill in your values
# These variables are loaded by the start.sh script

# AWS Configuration (Optional - can use AWS CLI config instead)
# AWS_ACCESS_KEY_ID=your_access_key
# AWS_SECRET_ACCESS_KEY=your_secret_key
# AWS_DEFAULT_REGION=ap-northeast-1

# Terraform Variables (passed as TF_VAR_*)
# Required
TF_VAR_ssh_key_name=your-aws-key-name  # Name of your SSH key pair in AWS

# Optional but recommended for GitHub integration
TF_VAR_github_pat=ghp_xxxxxxxxxxxxxxxxxxxx  # GitHub Personal Access Token
TF_VAR_github_username=your-github-username
TF_VAR_github_email=your-email@example.com
TF_VAR_github_repo_url=https://github.com/username/repo.git

# Optional project settings
TF_VAR_project_name=my-dev-env
TF_VAR_auto_terminate_hours=4
TF_VAR_instance_type=c7g.4xlarge
TF_VAR_spot_max_price=  # Leave empty for on-demand price
TF_VAR_root_volume_size=100
TF_VAR_enable_jetbrains_gateway=true